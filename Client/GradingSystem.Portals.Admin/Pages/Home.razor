@page "/home"
@layout MainLayout
@inherits LayoutComponentBase
<PageTitle>Acasa</PageTitle>
<main class="d-flex flex-column">
    <div class="d-flex flex-row main-banner align-items-center justify-content-between">
        <div class="d-flex flex-column">
            <h3 class="brand-name mb-0 primary-color">Administrator Grading System</h3>
        </div>

        <div class="d-flex flex-column align-items-end logout-container">
            <div class="d-flex flex-row">
                <span class="material-icons primary-color default-cursor">account_circle</span>
